<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="RecipeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="ExerciseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorExercisePrimary</item>
        <item name="colorPrimaryDark">@color/ColorExerciseDark</item>
    </style>

    <style name="DisplayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/displayPrimary</item>
        <item name="colorPrimaryDark">@color/displayDark</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/action_search</item>
        <item name="closeIcon">@drawable/ic_action_close</item>
    </style>

    <style name="CustomToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

</resources>
